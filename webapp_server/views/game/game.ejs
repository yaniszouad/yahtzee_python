<%- include('../partials/header', {title:'Yahtzee: ' + gameName + '|' + username , username:username}) -%>

  <section id="dice">
    <table>
      <tr>
        <td><img id="die_0" class="die" src="/images/blank.svg" width="70" /></td>
        <td><img id="die_1" class="die" src="/images/blank.svg" width="70" /></td>
        <td><img id="die_2" class="die" src="/images/blank.svg" width="70" /></td>
        <td><img id="die_3" class="die" src="/images/blank.svg" width="70" /></td>
        <td><img id="die_4" class="die" src="/images/blank.svg" width="70" /></td>
      </tr>
      <tr>
        <td colspan="3">Rolls remaining: <span id="rolls_remaining"><% if (scorecard_info.score != 0){ %> <%=parseInt(scorecard_info.score_info.dice_rolls)%> <%} else{ %> 3 <%}%></span></td>
        <td colspan="2">
        <button id="roll_button" type="button">Roll the Dice!</button>
        </td>
      </tr>
    </table>
    <br>
  </section>
  <div class="d-flex justify-content-center">
    <section id = "feedback"><%=feedback%><%- scorecard_id %></section>
  </div>
  <input type="text" id="scorecard_values" data-score='<%- JSON.stringify(scorecard) %>' hidden>
  
  <input type="text" id="scorecard_id" data-score='<%- scorecard_id %>' hidden>
  <br>
  <section id="scorecard">
    <table>
      <tr>
        <th>UPPER SECTION</th>
        <th>HOW TO SCORE</th>
        <th>#1</th>
      </tr>
      <tr>
        <td><img src="/images/one.svg" width="24" /></td>
        <td>Count and Add only Ones</td>
        <% for (scorecard_info in scorecard){ %>
        <td><input type="text" class="upper category" id="one_input" size="3" 
          value="<%= scorecard_info.score_info.upper.ones !== -1 ? scorecard_info.score_info.upper.ones : '' %>" 
          <% if (scorecard_info.score_info.upper.ones !== -1) { %> disabled <% } %> /></td>
        <% } %>
      </tr>
      <tr>
          <td><img src="/images/two.svg" width="24" /></td>
          <td>Count and Add only Twos</td>
          <td><input type="text" class="upper category" id="two_input" size="3" 
            value="<%= scorecard_info.score_info.upper.twos !== -1 ? scorecard_info.score_info.upper.twos : '' %>" 
            <% if (scorecard_info.score_info.upper.twos !== -1) { %> disabled <% } %> /></td>
      </tr>
      <tr>
          <td><img src="/images/three.svg" width="24" /></td>
          <td>Count and Add only Threes</td>
          <td><input type="text" class="upper category" id="three_input" size="3" 
            value="<%= scorecard_info.score_info.upper.threes !== -1 ? scorecard_info.score_info.upper.threes : '' %>" 
            <% if (scorecard_info.score_info.upper.threes !== -1) { %> disabled <% } %> /></td>
      </tr>
      <tr>
          <td><img src="/images/four.svg" width="24" /></td>
          <td>Count and Add only Fours</td>
          <td><input type="text" class="upper category" id="four_input" size="3" 
            value="<%= scorecard_info.score_info.upper.fours !== -1 ? scorecard_info.score_info.upper.fours : '' %>" 
            <% if (scorecard_info.score_info.upper.fours !== -1) { %> disabled <% } %> /></td>
      </tr>
      <tr>
          <td><img src="/images/five.svg" width="24" /></td>
          <td>Count and Add only Fives</td>
          <td><input type="text" class="upper category" id="five_input" size="3" 
            value="<%= scorecard_info.score_info.upper.fives !== -1 ? scorecard_info.score_info.upper.fives : '' %>" 
            <% if (scorecard_info.score_info.upper.fives !== -1) { %> disabled <% } %> /></td>
      </tr>
      <tr>
          <td><img src="/images/six.svg" width="24" /></td>
          <td>Count and Add only Sixes</td>
          <td><input type="text" class="upper category" id="six_input" size="3" 
            value="<%= scorecard_info.score_info.upper.sixes !== -1 ? scorecard_info.score_info.upper.sixes : '' %>" 
            <% if (scorecard_info.score_info.upper.sixes !== -1) { %> disabled <% } %> /></td>
      </tr>
      <tr>
          <td>TOTAL SCORE:</td>
          <td></td>
          <td class="upper score" id="upper_score"></td>
      </tr>
      <tr>
          <td>BONUS:</td>
          <td>If total score is more than 63, score 35</td>
          <td class="upper score" id="upper_bonus"></td>
      </tr>
      <tr>
          <td>TOTAL:</td>
          <td>of upper section incl bonus</td>
          <td class="upper score" id="upper_total"></td>
      </tr>
      <tr>
          <th>LOWER SECTION:</th>
          <th></th>
          <th></th>
      </tr>
      <tr>
          <td>3 of a Kind:</td>
          <td>Add Total of all Dice</td>
          <td><input type="text" class="lower category" id="three_of_a_kind_input" size="3" 
            value="<%= scorecard_info.score_info.lower.three_of_a_kind !== -1 ? scorecard_info.score_info.lower.three_of_a_kind : '' %>" 
            <% if (scorecard_info.score_info.lower.three_of_a_kind !== -1) { %> disabled <% } %> /></td>
      </tr>
      <tr>
          <td>4 of a Kind:</td>
          <td>Add Total of All Dice</td>
          <td><input type="text" class="lower category" id="four_of_a_kind_input" size="3" 
            value="<%= scorecard_info.score_info.lower.four_of_a_kind !== -1 ? scorecard_info.score_info.lower.four_of_a_kind : '' %>" 
            <% if (scorecard_info.score_info.lower.four_of_a_kind !== -1) { %> disabled <% } %> /></td>
      </tr>
      <tr>
          <td>Full House:</td>
          <td>Score 25</td>
          <td><input type="text" class="lower category" id="full_house_input" size="3" 
            value="<%= scorecard_info.score_info.lower.full_house !== -1 ? scorecard_info.score_info.lower.full_house : '' %>" 
            <% if (scorecard_info.score_info.lower.full_house !== -1) { %> disabled <% } %> /></td>
      </tr>
      <tr>
          <td>Small Straight (Sequence of 4):</td>
          <td>Score 30</td>
          <td><input type="text" class="lower category" id="small_straight_input" size="3" 
            value="<%= scorecard_info.score_info.lower.small_straight !== -1 ? scorecard_info.score_info.lower.small_straight : '' %>" 
            <% if (scorecard_info.score_info.lower.small_straight !== -1) { %> disabled <% } %> /></td></tr>
      <tr>
          <td>Large Straight (Sequence of 5):</td>
          <td>Score 40</td>
          <td><input type="text" class="lower category" id="large_straight_input" size="3" 
            value="<%= scorecard_info.score_info.lower.large_straight !== -1 ? scorecard_info.score_info.lower.large_straight : '' %>" 
            <% if (scorecard_info.score_info.lower.large_straight !== -1) { %> disabled <% } %> /></td></tr>
      <tr>
          <td>Chance:</td>
          <td>Score Total of all 5 Dice</td>
          <td><input type="text" class="lower category" id="chance_input" size="3" 
            value="<%= scorecard_info.score_info.lower.chance !== -1 ? scorecard_info.score_info.lower.chance : '' %>" 
            <% if (scorecard_info.score_info.lower.chance !== -1) { %> disabled <% } %> /></td></tr>
      <tr>
          <td>YAHTZEE:</td>
          <td>Score 50</td>
          <td><input type="text" class="lower category" id="yahtzee_input" size="3" 
            value="<%= scorecard_info.score_info.lower.yahtzee !== -1 ? scorecard_info.score_info.lower.yahtzee : '' %>" 
            <% if (scorecard_info.score_info.lower.yahtzee !== -1) { %> disabled <% } %> /></td></tr>
      <tr>
        <td>Total (Of Lower Section) </td>
        <td></td>
        <td class="lower score" id="lower_score"></td>
      </tr>
      <tr>
        <td>Total (Of Upper Section)</td>
        <td></td>
        <td class="lower score" id="upper_total_lower"></td>
      </tr>
      <tr>
        <td>Grand Total </td>
        <td></td>
        <td class="lower score" id="grand_total"></td>
      </tr>
    </table>
  <form action="">
      <p><label>Chat Area</label></p>
      <textarea id="chat_textarea" name="textarea" rows="4" cols="50"></textarea>
      <br>
      <input id="chat_input">
  </form><br>
  <button id="chat_button" type="submit">Send</button><br>

  </section>
  <script src="/js/UI.js"  type="module"></script> 
  <%- include('../partials/footer') -%>